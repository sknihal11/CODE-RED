def average_passing_grades(grades: list[int]) -> float:
    """
    Calculate the average of grades that are 50 or higher.
    """
    passing_sum = 0
    count = 0
    
    # Iterate through the list to find grades >= 50
    for grade in grades:
        if grade >= 50:
            passing_sum += grade
            count += 1
            
    # Avoid division by zero
    if count == 0:
        return 0.0
        
    return float(passing_sum / count)
